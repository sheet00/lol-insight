/**
 * Cloudflare Workers (Modules) 用 Wrangler 設定（単一ソース）
 */
{
  "$schema": "node_modules/wrangler/config-schema.json",
  "name": "lol-teacher",
  "main": "./.output/server/index.mjs",
  "compatibility_date": "2024-09-19",
  "compatibility_flags": [
    "nodejs_compat"
  ],
  "assets": {
    "binding": "ASSETS",
    "directory": "./.output/public/"
  },
  "observability": {
    "enabled": true
  },
  "vars": {
    // 注意: ここに記載されていないプレーンテキストの環境変数は、wrangler deploy 時に削除される
    // 手動でダッシュボードに追加した変数を保持したい場合は --keep-vars オプションを使用
    // シークレット変数（wrangler secret put で設定）は削除されない
    "NUXT_PUBLIC_AVAILABLE_AI_MODELS": "[\"google/gemini-2.5-flash-lite\",\"google/gemini-2.5-flash\",\"openai/gpt-5-mini\",\"openai/gpt-5-nano\"]"
  },
  "d1_databases": [
    {
      "binding": "DB",
      "database_name": "lol-teacher-db",
      "database_id": "45bc3270-18fe-4b1e-ad15-03de1d6ccb5e"
    }
  ]
}